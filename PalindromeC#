using System;
namespace palindromecheck {
   class Program {

     public static bool CheckPalindrome(string text){
      string reverse;
      char[] ch = text.ToCharArray();
         Array.Reverse(ch);
         reverse = new string(ch);
         bool b = text.Equals(reverse, StringComparison.OrdinalIgnoreCase);
         return b; 
     }
